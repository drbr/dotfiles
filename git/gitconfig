[color]
    ui = auto

[alias]
    st = status
    ci = commit
    cs = commit --fixup=HEAD
    co = checkout
    dag = log --graph --decorate --oneline --pretty=format:'%C(auto)%h%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --all
    dab = log --graph --decorate --oneline --pretty=format:'%C(auto)%h%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    pp = !git pull && git remote prune origin

[push]
    default = current

[rerere]
    enabled = true

[core]
    pager = less -FMRiX
    whitespace = -trailing-space
    autocrlf = input

[pull]
    rebase = true

[rebase]
    autosquash = true

[apply]
    whitespace = nowarn

[credential]

[diff]
    tool = bc3

[difftool "bc3"]
    trustExitCode = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[credential]
	helper = osxkeychain
