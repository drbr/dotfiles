[user]
    name = Andrew Brandon
    email = drbr@users.noreply.github.com

[init]
    defaultBranch = main

[alias]
    bb = branch -vv
    st = status
    ci = commit
    cs = commit --fixup=HEAD
    co = checkout
    dab = !LESS="'-S -# 4'" git log --graph --oneline --pretty=format:'%C(auto)%h%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset'
    dag = dab --all
    dam = dab HEAD origin/HEAD
    pp = pull --prune
    delete-old-branches = !git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D
    rr = !git checkout main && git pull --prune && git delete-old-branches

[push]
    default = current

[rerere]
    enabled = true

[core]
    pager = less -FMRiX
    whitespace = -trailing-space
    autocrlf = input

[pull]
    rebase = true

[rebase]
    autosquash = true

[apply]
    whitespace = nowarn

[diff]
    tool = bc3

[difftool "bc3"]
    trustExitCode = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[credential]
	helper = osxkeychain
